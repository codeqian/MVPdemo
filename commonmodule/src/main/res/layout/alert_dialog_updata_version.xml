<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/app_margin_lib"
    android:layout_marginRight="@dimen/app_margin_lib"
    android:background="@drawable/shape_white_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/version_background"
        android:gravity="center"
        android:text="发现新版本"
        android:textColor="@color/text_black"
        android:textSize="@dimen/font_size_big" />

    <TextView
        android:id="@+id/update_version"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="文件版本:" />

    <TextView
        android:id="@+id/update_size"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="文件大小:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="更新内容:" />

    <TextView
        android:id="@+id/update_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27.5dp"
        android:gravity="left"
        android:text="内容" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/left_update_version"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_light_gray_noradius"
            android:gravity="center"
            android:text="稍后再说"
            android:textColor="@color/text_orange" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="40dp"
            android:background="#D3D3D3"/>

        <TextView
            android:id="@+id/right_update_version"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_light_gray_noradius"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/text_orange" />
    </LinearLayout>


</LinearLayout>